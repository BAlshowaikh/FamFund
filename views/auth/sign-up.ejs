<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/public/css/auth.css" />
    <title>sign-up</title>
  </head>
  <body>
    <%- include("../partials/_navbar.ejs") %>

    <div class="signup-container">
      <% if (page === 1) { %>

      <h2 class="signup-title">Create a new account!</h2>

      <form action="/auth/sign-up" method="POST" enctype="multipart/form-data">
        <label>Username</label>
        <input type="text" name="username" placeholder="Input your name" />

        <label>Email</label>
        <input type="text" name="email" />

        <label>Password</label>
        <input type="password" name="password" />

        <label>Confirm Password</label>
        <input type="password" name="confirmPassword" />

        <label>Role</label>
        <select name="role">
          <option value="Parent">Parent</option>
          <option value="Child">Child</option>
        </select>

        <label>Bio</label>
        <textarea
          id="bio"
          name="bio"
          rows="4"
          placeholder="Tell us something about yourself..."
        ></textarea>
        <div class="bio-counter"><span id="counter">0</span> / 200</div>

        <label>Profile Image</label>
        <input type="file" name="profileImage" accept="image/*" />

        <button type="submit" class="signup-btn">Continue</button>
      </form>

      <script>
        const bio = document.getElementById("bio")
        const counter = document.getElementById("counter")

        bio.addEventListener("input", () => {
          counter.innerText = bio.value.length
        })
      </script>

      <% } else if (page === 2 && role === "Parent") { %>

      <h2 class="signup-title">Create a Family</h2>

      <form action="/auth/sign-up/parent" method="POST">
        <label>Family Name</label>
        <input type="text" name="parentFamilyName" />

        <label>Family Code</label>
        <input type="text" name="code" />

        <button type="submit" class="signup-btn">Create a Family</button>
      </form>

      <% } else if (page === 2 && role === "Child") { %>

      <h2 class="signup-title">Join a Family</h2>

      <form action="/auth/sign-up/child" method="POST">
        <label>Family Code</label>
        <input type="text" name="code" />

        <button type="submit" class="signup-btn">Join Family</button>
      </form>

      <% } %>
    </div>
  </body>
</html>
