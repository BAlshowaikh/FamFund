<section class="ff-section d-flex align-items-center justify-content-center">
  <div class="ff-card text-center" style="max-width: 32em; width: 100%;">
    <!-- Icon -->
    <div class="mb-3">
      <i class="bi bi-emoji-frown" style="font-size: 2.5em; color: #2364A4;"></i>
    </div>

    <!-- Title -->
    <h2 class="ff-page-title mb-2">
      Oops! Something went wrong
    </h2>

    <p class="text-muted mb-3">
      We couldnâ€™t complete this action. Please review the details below or try again.
    </p>

    <!-- Dynamic error message from the bachedn -->
    <div class="alert alert-light border-0 text-start" role="alert">
      <%- message %>
    </div>

    <!-- Actions -->
    <!-- history.back() will retrive the last visited page -->
    <div class="d-flex justify-content-center gap-2 mt-3">
      <button
        type="button"
        class="btn btn-outline-secondary"
        onclick="history.back()"
      >
        Go Back
      </button>
    </div>
  </div>
</section>
