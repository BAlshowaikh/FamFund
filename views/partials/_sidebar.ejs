<!-- Sidebar / Left Navigation -->
 <% const page = typeof activePage !== 'undefined' ? activePage : 'goals'; %>

<aside
  class="d-flex flex-column border-end min-vh-100 p-3"
  style="background-color: #F2FAFF; width: 230px;"
>
  <!-- Brand -->
  <div class="d-flex align-items-center mb-4">
    <a href="#" class="d-flex align-items-center text-decoration-none">
      <img
        src="/public/images/logo.png"
        alt="FamFund"
        class="me-2"
        style="height: 3rem;"
      />
      <span class="fw-bold fs-4" style="color: #2364A4;">FamFund</span>
    </a>
  </div>

  <!-- Main Nav -->
  <ul class="nav nav-pills flex-column gap-2">
    <li class="nav-item">
      <a
        href="/"
        class="nav-link d-flex align-items-center text-dark <%= page === 'dashboard' ? 'active' : '' %>"
      >
        <i class="bi bi-grid-1x2 me-2"></i>
        <span>Dashboard</span>
      </a>
    </li>

    <li class="nav-item">
      <a
        href="/goals"
        class="nav-link d-flex align-items-center text-dark <%= page === 'goals' ? 'active' : '' %>"
      >
        <i class="bi bi-bullseye me-2"></i>
        <span>Goals</span>
      </a>
    </li>

    <li class="nav-item">
      <a
        href="/contributions"
        class="nav-link d-flex align-items-center text-dark <%= page === 'contributions' ? 'active' : '' %>"
      >
        <i class="bi bi-cash-stack me-2"></i>
        <span>Contributions</span>
      </a>
    </li>

    <li class="nav-item">
      <a
        href="/rewards"
        class="nav-link d-flex align-items-center text-dark <%= page === 'rewards' ? 'active' : '' %>"
      >
        <i class="bi bi-gift me-2"></i>
        <span>Rewards</span>
      </a>
    </li>

    <li class="nav-item">
      <a
        href="/tips"
        class="nav-link d-flex align-items-center text-dark <%= page === 'tips' ? 'active' : '' %>"
      >
        <i class="bi bi-info-circle me-2"></i>
        <span>Tips</span>
      </a>
    </li>
  </ul>

</aside>
