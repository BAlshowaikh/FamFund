<%
  const current = activeGoal.currentAmount || 0;
  const target = activeGoal.targetAmount || 1;
  const percent = Math.min(100, Math.round((current / target) * 100));
%>

<article class="ff-goal-card">
  <!-- Cover image / placeholder -->
  <div class="ff-goal-image-wrapper">
    <% if (activeGoal.coverImgURL) { %>
      <img
        src="<%= activeGoal.coverImgURL %>"
        alt="<%= activeGoal.title %> cover"
        class="ff-goal-image"
      />
    <% } else { %>
      <div class="ff-goal-image--placeholder">
        <i class="bi bi-image"></i>
      </div>
    <% } %>
  </div>

  <!-- Main info -->
  <div class="flex-grow-1">
    <div class="d-flex justify-content-between align-items-start mb-2">
      <div>
        <div class="ff-goal-title"><%= activeGoal.title %></div>
        <div class="ff-goal-subtitle text-muted">
          <%= current %> of <%= target %> BD
        </div>
      </div>
    </div>

    <div class="ff-progress-track">
      <div class="ff-progress-fill" style="width:<%= percent %>%"></div>
    </div>
  </div>
</article>
